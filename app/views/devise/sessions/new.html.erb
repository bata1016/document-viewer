
<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <div class='login-flash-message'>
              <%= flash[:notice] %>
              <%= flash[:alert] %>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
              <div class="form-label-group">
                <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Email address", autofocus: true, autocomplete: "email"%>
                <%= f.label :email, for: "inputEmail"%>
              </div>

              <div class="form-label-group">
                <%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: "Password", autofocus: true, autocomplete: "password"%>
                <%= f.label :password, for: "inputPassword"%>
              </div>
              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
              </div>
              <div class="form-label-group">
                <%= f.submit 'Sign in', class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              </div>  
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>