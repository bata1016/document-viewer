
<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Change Password</h5>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-label-group">
                <%= f.email_field :email, id: "inputEmailAddress", class: "form-control", placeholder: "Email address", autofocus: true %>
                <%= f.label :email, for: "inputEmailAddress"%>
              </div>
              <div class="form-label-group">
                <%= f.submit 'reset password instructions', class: "btn btn-lg btn-primary btn-block" %>
              </div>  

            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>