<div class="wrapper">
  <div class="head">
    <div class="head-top d-flex justify-content-around">
      <div class="app-name d-flex align-items-center">
        <%= link_to "Apps name",  folder_documents_path(@folder.id)%>
      </div>
         <%= link_to "Log out", destroy_user_session_path, class: "btn btn-lg btn-facebook", span: "sr-only", method: :delete %>
    </div>
    <%= form_with model: [@document, @folder], id:"new_pdf", url: folder_document_path do |f| %>
    
    <% if @document.errors.any? %>
    <div class="alert error-alert">
      <ul>
        <% @document.errors.full_messages.each do |message| %>
          <li class="error-message">
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= f.label :document_name, "Document tag" %>
          <%= f.text_field :document_name, id: "reInputDocumentname", placeholder: "Document tag"  %>
          <!-- <label for="text4b">Document name</label>
          <input type="text" class="form-control" id="text4b" placeholder="Document name"> -->
        </div>
        <div class="form-group col-6">
          <div class="form-group" style="margin-top: 21px;">
            <%= f.file_field :images, type: 'file',  multiple: true %>
            <%= f.submit '送信する', class: "form-submit", accept:".pdf" %>
            <!-- <form method="post" enctype="multipart/form-data">
              <input type="file" accept=".pdf" name="avatar">
              <button type="submit">送信する</button> -->
            </form>
          </div>
        </div>
      </div>
    <% end  %>
  </div>

  <div class="added-content-preview">
    <div id="preview-list">
      <% @document.images.each do |image| %>
        <%= image_tag image.preview(resize:'500x1000') %>
      <% end %>
    </div>
  </div>
</div>