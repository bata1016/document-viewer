<div class="wrapper">
  <div class="head">
    <div class="head-top d-flex justify-content-around">
      <div class="app-name d-flex align-items-center">
        <%= link_to "Apps name",  folder_documents_path(@folder.id)%>
      </div>
         <%= link_to "Log out", destroy_user_session_path, class: "btn btn-lg btn-facebook", span: "sr-only", method: :delete %>
    </div>
    <%= form_with model: [@folder, @document], id:"new_pdf", local: true, url: folder_document_path do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    
      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= f.label :document_tag, "Document tag" %>
          <%= f.text_field :document_tag, id: "reInputDocumentname", placeholder: "Document tag"  %>
        </div>
        <div class="form-group col-6">
          <div class="form-group" style="margin-top: 21px;">
            <%= f.file_field :images, type: 'file',  multiple: true %>
            <%= f.submit '送信する', class: "form-submit", accept:".pdf" %>
          </div>
        </div>
      </div>
    <% end  %>
  </div>

  <div class="added-content-preview">
    <div id="preview-list">
      <% @document.images.each do |image| %>
        <%= image_tag image.preview(resize:'500x1000') %>
      <% end %>
    </div>
  </div>
</div>