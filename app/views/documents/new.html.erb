<div class="wrapper">
  <div class="head">
    <div class="head-top d-flex justify-content-around">
      <div class="app-name d-flex align-items-center">
        Apps name
      </div>
         <%= link_to "Log out", destroy_user_session_path, class: "btn btn-lg btn-facebook", span: "sr-only", method: :delete %>
    </div>
    <%= form_with model:@folder, url: folder_documents_path(@folder.id), method: :post do |f| %>    
      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= f.label :document_name, "Document name" %>
          <%= f.text_field :document_name, id: "reInputDocumentname", placeholder: "Document name"  %>
          <!-- <label for="text4b">Document name</label>
          <input type="text" class="form-control" id="text4b" placeholder="Document name"> -->
        </div>
        <div class="form-group col-6">
          <div class="form-group" style="margin-top: 21px;">
            <%= f.file_field :images,  multiple: true %>
            <%= f.submit '送信する', class: "form-submit", accept:".pdf" %>
            <!-- <form method="post" enctype="multipart/form-data">
              <input type="file" accept=".pdf" name="avatar">
              <button type="submit">送信する</button> -->
            </form>
          </div>
        </div>
      </div>
    <% end  %>
  </div>

  <div class="added-content-preview">
    <div class="added-content">
      <%= "PDF" %>
    </div>
  </div>
  <footer class="d-flex justify-content-center">
    <%= link_to "トップページへ戻る",  folder_documents_path(@folder.id), class: "back-btn btn btn-lg btn-facebook d-flex align-items-end" %>
  </footer>
</div>